{
  "version": "0.0.1",
  "configurations": [
    {
      "name": "web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:web"],
      "port": 3000
    },
    {
      "name": "api",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "cd apps/api && source .venv/bin/activate && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000"],
      "port": 8000
    },
    {
      "name": "db",
      "runtimeExecutable": "docker",
      "runtimeArgs": ["compose", "up"],
      "port": 5432
    }
  ]
}
